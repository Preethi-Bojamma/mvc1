@model mvc1.Models.customer
@{
    
        ViewBag.Title = "Delete";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Delete Customer</h2>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(c => c.CName)
                @Html.DisplayFor(c => c.CName, new { @class = "form-control", autocomplete = "off" })
               
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.City)
                @Html.DisplayFor(c => c.City, new { @class = "form-control" })
                
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.BirthDate)
                @Html.DisplayFor(c => c.BirthDate, new { @class = "form-control" })
              
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Gender)
                @Html.DropDownListFor(c => c.Gender, ViewBag.Gender as SelectList, new { @class = "form-control" })
                
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.MembershipTypeId)
                @Html.DropDownListFor(c => c.MembershipTypeId, ViewBag.MembershipTypeId as SelectList, new { @class = "form-control" })
               
            </div>

            <div class="form-group">
                <input type="Submit" value="Delete" class="btn btn-outline-primary" />
            </div>
        }
    </div>



